{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "indent": ["off", 4],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "quotes": ["error", "double", { "allowTemplateLiterals": true }],
    "comma-dangle": ["error", "never"],
    "semi": [2, "never"],
    "multiline-ternary": ["off", "never"],
    "spaced-comment": ["off", "never"]
  }
}
